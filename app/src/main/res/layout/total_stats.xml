<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clock"
                />
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.cti.statscsgo.custom.CustomTextView
                    foo:customFont="fonts/RobotoLight.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/timePlayed"
                    android:textSize="30dp"
                    />
                <com.cti.statscsgo.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Time played"
                    foo:customFont="fonts/RobotoLight.ttf"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.cti.statscsgo.custom.CustomTextView
                    foo:customFont="fonts/RobotoLight.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/KD"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    />
                <com.cti.statscsgo.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="K/D"
                    android:gravity="center_horizontal"
                    foo:customFont="fonts/RobotoLight.ttf"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/centre"
                />
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.cti.statscsgo.custom.CustomTextView
                    foo:customFont="fonts/RobotoLight.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/totalKills"
                    android:textSize="30dp"
                    />
                <com.cti.statscsgo.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Total kills"
                    foo:customFont="fonts/RobotoLight.ttf"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star"
                />
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.cti.statscsgo.custom.CustomTextView
                    foo:customFont="fonts/RobotoLight.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/totalMVP"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    />
                <com.cti.statscsgo.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="MVP"
                    foo:customFont="fonts/RobotoLight.ttf"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/headshot"
                />
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.cti.statscsgo.custom.CustomTextView
                    foo:customFont="fonts/RobotoLight.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/headshots"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    />
                <com.cti.statscsgo.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Headshots"
                    foo:customFont="fonts/RobotoLight.ttf"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bomb"
                />
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.cti.statscsgo.custom.CustomTextView
                    foo:customFont="fonts/RobotoLight.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/bomb_set"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    />
                <com.cti.statscsgo.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Bombs set"
                    foo:customFont="fonts/RobotoLight.ttf"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/defuse_bomb2"
                />
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.cti.statscsgo.custom.CustomTextView
                    foo:customFont="fonts/RobotoLight.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/bomb_defuse"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    />
                <com.cti.statscsgo.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Bombs defused"
                    foo:customFont="fonts/RobotoLight.ttf"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>